<div class="row">
  <div class="col-12">
    <img class="img-fluid cover-image" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
  </div>
</div>
<div class="row">
  <div class="col-12 col-lg-8 offset-lg-2 mt-4">
    <div class="post-page text-center my-4">
      <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
      <hr>
      <span class="date"><%- date(item.date, 'MMM DD YYYY') %></span>
    </div>
    <%- item.content %>
  </div>
</div>