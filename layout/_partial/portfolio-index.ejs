<div class="col-lg-4 col-md-6 col-12 mb-5">
  <div class="image-box">
    <div class="post-image">
      <a href="<%- config.root %><%- item.path %>">
      <div class="dodeca">
        <div class="dode1">
          <div class="dode2">
            <img class="img-fluid" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
          </div>
        </div>
      </div>
      </a>
    </div>
  </div>
  <div class="post-details text-center mt-3">
    <a href="<%- config.root %><%- item.path %>">
      <%- item.title || theme.default_post_title || "Untitled" %>
    </a>
    <hr>
    <span class="date"><%- date(item.date, 'MMM DD YYYY') %></span>
  </div>
</div>